fn calculate_pi(iterations: float) -> float:
    pi = 0.0
    sign = 1.0
    
    k = 0.0
    while k < iterations:
        denominator = 2.0 * k + 1.0
        pi = pi + (sign / denominator)
        sign = -sign
        k = k + 1.0
    
    return pi * 4.0

fn main:
    iterations = 10000000.0
    pi = calculate_pi(iterations)
    pi_str = f"{pi}"
    print("π ≈ ")
    print(pi_str)
    print("\n")














